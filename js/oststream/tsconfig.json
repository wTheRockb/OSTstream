{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "ES2015",
//    "lib": ["es6", "dom"],
    "sourceMap": true,
    "declaration": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
//  "exclude": [
//    "node_modules",
//    "build",
//    "scripts",
//    "acceptance-tests",
//    "webpack",
//    "jest",
//    "src/setupTests.ts"
//  ]
  "include": ["js/**/*.ts"]

}
